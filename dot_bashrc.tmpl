{{- if eq .chezmoi.hostname "lenovo" }}

# Global
export EDITOR="vim"
export TERM="xterm-256color"
export CLICOLOR=1

# Add path for Ipython and Jupyter
export PATH=$PATH:/home/mofo/.local/bin/

# Custom prompt
# TODO set different color if ROOT
export PS1="[\[\e[1;33m\]\u\[\e[m\]\[\e[1;32m\]@\[\e[m\]\[\e[1;32m\]\h\[\e[m\] \[\e[1;36m\]\W\[\e[m\]] \\$ "

# Fancier LESS (and man)
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin bold
export LESS_TERMCAP_md=$'\E[1;36m'     # begin blink
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline
export GROFF_NO_SGR=1                  # for konsole and gnome-terminal

## CLI
# Fasd
eval "$(fasd --init auto)"

# Kcli
eval "$(register-python-argcomplete kcli)"

# Clean history
unset export HISTIGNORE
export HISTIGNORE=$HISTIGNORE:'l:ls:ll:lt *:history:pwd:man *:fg:bg:jobs *:echo *'

# Ignore duplicate commands
export HISTCONTROL=ignoredups

# Sourcing
[ -f $HOME/.bash_aliases ] && source $HOME/.bash_aliases
[ -f $HOME/.bash_git_completion ] && source $HOME/.bash_git_completion
[ -f $HOME/.git-prompt.sh ] && source $HOME/.git-prompt.sh
[ -f $HOME/.fzf.bash ] && source ~/.fzf.bash

{{- end }}
[ -f $HOME/.fzf.bash ] && source ~/.fzf.bash
